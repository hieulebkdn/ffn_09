<li>
  <%= achievement.received_day %>
  <%= image_tag achievement.picture.url, class: "team-logo-index" if achievement.picture? %>
  <% if can? :delete, achievement %>
    <%= link_to t(".delete"), delete_achievement_path(achievement), method: :delete,
      class: "btn btn-danger pull-right", data: {confirm: t(".affirm_msg")} %>
  <% end %>
  <p class = "btn btn-success pull-center"><%= achievement.name %></p>
  <% if can? :manage, Achievement %>
    <p class = "btn btn-primary pull-center"><%= achievement.team_name %></p>
  <% else %>
    <p class = "btn btn-primary pull-right"><%= achievement.team_name %></p>
  <% end %>
</li>
