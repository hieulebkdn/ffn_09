<tr>
  <td><%= match.league_name %></td>
  <td><%= match.day %></td>
  <td><%= convert_time match.start_time %></td>
  <td><%= match.stadium %></td>
  <td class="alignRight">
    <%= match.team1_matches_name %>
    <%= image_tag match.team1_matches_logo.url,
      class: "team-logo2-index" if match.team1_matches_logo %>
  </td>
  <% if has_score? match.score1, match.score2 %>
    <td class="alignCenter"><%= t ".score", score1: match.score1, score2: match.score2 %></td>
  <% else %>
    <td class="alignCenter"><%= t ".pending" %></td>
  <% end %>
  <td>
    <%= image_tag match.team2_matches_logo.url,
      class: "team-logo2-index" if match.team2_matches_logo %>
    <%= match.team2_matches_name %>
  </td>
  <% if logged_in? %>
    <td><p class = "btn btn-success pull-center"><%= t ".bet" %></p></td>
  <% end %>
</tr>
