<%= form_for @player do |f| %>
  <h2><%= t ".player" %></h2>
  <p class="hint-text"><%= t ".content1" %></p>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control",
      placeholder: t(".name_holder") %>
  </div>
  <div class="form-group">
    <%= f.date_field :dob, class: "form-control", min: Settings.min_birthday,
      placeholder: t(".dob_holder") %>
  </div>
  <div class="form-group">
    <%= f.text_field :position, class: "form-control",
      placeholder: t(".position_holder") %>
  </div>
  <div class="form-group">
    <%= f.number_field :p_number, class: "form-control", min: Settings.min_pnumber,
      placeholder: t(".p_number") %>
  </div>
  <div class="form-group">
    <%= f.label t(".pic_title") %>
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t(".select_team") %>
    <%= f.select :team_id, options_for_select(@team_list), include_blank: true %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-success btn-lg btn-block" %>
<% end %>
