<!-- Page Content -->
<div class="container">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li><%= t(".txt_home") %></li>
        <li class="active"><%= t ".blog_post" %></li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <!-- Content Row -->
  <div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-9">
      <!-- Blog Post -->
      <h2><%= @article.header %></h2>
      <!-- Date/Time -->
      <p><i class="fa fa-clock-o"></i> <%= t ".posted_by" %> <%= link_to @article.user.name, user_path(@article.user) %> <%= t ".atdate", date: @article.created_at %></p>
      <hr>
      <!-- Post Content -->
      <%= raw @article.content %>
      <hr>
      <!-- Blog Comments -->
      <!-- Comments Form -->
      <div class="div-comment-form">
        <%= render "comment_form" %>
      </div>

      <hr>
      <div class="div-comment">
        <%= render @comments %>
      </div>
    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-3">

      <!-- Blog Categories Well -->
      <div class="well">
        <h4><%= t ".newest_news" %></h4>
        <div class="row">
          <div class="col-lg-12">
            <ul class="list-group">
              <% @top10_news.each do |news| %>
                <li class="list-group-item"><%= link_to news.header, news %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <!-- /.row -->
      </div>

    </div>
  </div>
</div>
<!-- /.container -->
