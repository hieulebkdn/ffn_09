<%= render "admincp/sidebar" %>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-9">
      <div class="well">
        <%= form_for @league do |f| %>
          <%= f.label :name, t(".league_name") %>
          <%= f.text_area :name, placeholder: t(".league_name_placeholder") %>
          <%= label_tag :add_team %>
          <%= select_tag :teams, options_for_select(@team_list), multiple: true %>

          <%= f.submit t(".btn_submit"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
