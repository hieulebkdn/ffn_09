<% provide :title, t(".title") %>
<% if can? :manage, League %>
  <%= render "admincp/sidebar" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-9">
        <div class="well">
          <ul class="users">
            <%= render @leagues %>
          </ul>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1><%= t ".title" %></h1>
        <ul class="users">
          <%= render @leagues %>
        </ul>
        <%= will_paginate %>
      </div>
    </div>
  </div>
<% end %>
